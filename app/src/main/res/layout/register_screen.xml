<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:textSize="16dp"

            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:padding="8dp"
            android:maxLines="1"
            android:id="@+id/et_name"
            android:textSize="16dp"
            android:background="#E9E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="#000"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_register_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:id="@+id/et_email_reg"
            android:textSize="16dp"
            android:background="#E9E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="#000"
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_register_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:padding="8dp"
            android:inputType="textPassword"
            android:id="@+id/et_password_reg"
            android:textSize="16dp"
            android:background="#E9E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16dp"
            android:textColor="#000"
            android:text="Confirm Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:padding="8dp"
            android:inputType="textPassword"
            android:id="@+id/et_confirm_pass_reg"
            android:textSize="16dp"
            android:background="#E9E9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:background="#E5E5"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login_reg"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="#000"
        android:text="Already a member?Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>